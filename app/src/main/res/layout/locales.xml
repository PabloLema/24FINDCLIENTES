<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.demo.samt.parkdemo1.InformacionLocales">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp">

                <Switch
                    android:id="@+id/estado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Se encuentra"
                    android:textOff="Cerrado"
                    android:textOn="Abierto" />

                <Space
                    android:layout_width="1dp"
                    android:layout_height="20dp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text=" Nombre"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tvtNombreL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="1dp"
                    android:layout_height="16dp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Descripcion"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tvtDescripcionL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:editable="true"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"

                    />

                <Space
                    android:layout_width="1dp"
                    android:layout_height="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorDivider" />

                <Space
                    android:layout_width="1dp"
                    android:layout_height="16dp" />

                <TextView
                    android:id="@+id/tvtHorarios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Latitud"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="1dp"
                    android:layout_height="16dp" />

                <EditText
                    android:id="@+id/tvtLatitudI"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:editable="true"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"

                    />

                <Space
                    android:layout_width="1dp"
                    android:layout_height="16dp" />


                <TextView
                    android:id="@+id/tvtlongitud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Longitud"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="1dp"
                    android:layout_height="16dp" />

                <EditText
                    android:id="@+id/tvtLongitudI"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:editable="true"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"

                    />

                <Space
                    android:layout_width="1dp"
                    android:layout_height="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorDivider" />

                <Space
                    android:layout_width="1dp"
                    android:layout_height="16dp" />

                <TextView
                    android:id="@+id/tvtDireccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Direccion"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="1dp"
                    android:layout_height="16dp" />

                <EditText
                    android:id="@+id/tvtDireccionA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <Space
                    android:layout_width="1dp"
                    android:layout_height="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorDivider" />

                <Space
                    android:layout_width="1dp"
                    android:layout_height="16dp" />

                <TextView
                    android:id="@+id/tvtComentarios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Promociones"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="1dp"
                    android:layout_height="16dp" />

                <TextView
                    android:id="@+id/tvtComentariosA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textAllCaps="true" />

                <Space
                    android:layout_width="1dp"
                    android:layout_height="16dp" />

                <Button
                    android:id="@+id/btnmapa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Actualizar Datos"
                    android:textAlignment="center" />

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/crd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="16dp">

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>

